<div class="container series show">

<div class="row mb-3">
  <div class="col-12 mt-3">
    <h1 class="mt-3">
      <%= title_link(@series) %>
    </h1>
  </div>
</div>

<div class="row mb-5">
  <div class="col<%= "-9" if @series.image.attached? %>">
    <%= Nokogiri::HTML5.fragment(@series.description).to_s.html_safe if @series.description.present? %>
  </div>
  <% if @series.image.attached? %>
  <div class="col-3">
    <% if @series.image_link.present? %>
      <%= link_to @series.image_link, { "aria-hidden": aria_hidden(@series) } do %>
        <%= image_tag @series.custom_image("image", 270, 220), alt: @series.image_alt_text %>
      <% end %>
    <% end %>
          
    <%= image_tag @series.custom_image("image", 270, 220), 
          {"aria-hidden": aria_hidden(@series), alt: @series.image_alt_text} 
          unless @series.image_link.present? %>
  </div>
  <% end %>
</div>

  <%= render "/books/books" %>

</div>