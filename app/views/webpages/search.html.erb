<div class="container px-0 px-lg-3 index" id="search-results">
	<div class="row">
		<div class="col">
			<h1 class="my-4">You searched for: <small><%= params[:q] %></small></h1>
		</div>
	</div>
	<% if @results.present? %>
	<div class="row">
		<% if @books.present? %>
		<div class="col-12 col-lg-7">

			<h2 class="gold mt-3 mx-1 d-none d-lg-block">Book Results</h2>
      <%= button_tag("", 
        :class=>"btn btn-lg btn-secondary dropdown-toggle pl-0 text-center gold w-100 d-lg-none", 
        :type=>"button",
        :'data-toggle'=>"collapse",
        :'data-target'=>"#book-results",
        :'aria-controls'=>"book-results",
        :'aria-expanded'=>"false",
        :'aria-label'=>"Toggle Book Results") do
        %>
        <span class="navbar-toggler-icon pt-0 text-center w-auto gold">Book Results</span>
      <% end %>

      <div class="d-none d-lg-flex mx-0 row pb-4 mb-4 book-results">
        <%= render "webpages/search/book_results" %>
      </div>
      <div class="d-lg-none collapse navbar-collapse" id="book-results">
        <%= render "webpages/search/book_results" %>
      </div>

		</div>
		<div class="col-12 col-lg-5 pl-lg-5 mt-3"> <!-- right column -->
		<% else %>
		<div class="col-12 mt-3"> <!-- right column -->
		<% end %>

		<% if @oabooks.present? %>
			<h2 class="gold mx-1 d-none d-lg-block">Open Access Books</h2>
      <%= button_tag("", 
        :class=>"btn btn-lg btn-secondary dropdown-toggle pl-0 mb-3 text-center gold w-100 d-lg-none", 
        :type=>"button",
        :'data-toggle'=>"collapse",
        :'data-target'=>"#open-access",
        :'aria-controls'=>"open-access",
        :'aria-expanded'=>"false",
        :'aria-label'=>"Toggle Open Access Books") do
        %>
        <span class="navbar-toggler-icon pt-0 text-center w-auto gold">Open Access Books</span>
      <% end %>

      <div class="d-none d-lg-flex mx-0 row pb-4 mb-4 open-access">
        <%= render "webpages/search/open_access" %>
      </div>
      <div class="d-lg-none collapse navbar-collapse" id="open-access">
        <%= render "webpages/search/open_access" %>
      </div>
		<% end %>

		<% if @journals.present? %>
