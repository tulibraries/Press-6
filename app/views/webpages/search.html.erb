        <span class="navbar-toggler-icon pt-0 text-center w-auto gold">Other Results</span>
      <% end %>

      <div class="d-none d-lg-flex mx-0 row pb-4 mb-4 site">
        <%= render "webpages/search/site" %>
      </div>
      <div class="d-lg-none collapse navbar-collapse" id="site" style="position:relative;top:-16px;">
        <%= render "webpages/search/site" %>
      </div>
    <% end %>


		</div>

  </div>
	<% else %>
	<div class="row">
		<div class="col text-center">
			<h2>No results</h2>
		</div>
	</div>
<% end %>
</div>