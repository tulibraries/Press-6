<div class="container" id="people">

<div class="row">
  <div class="col pl-0">
    <h1 class="mb-4 mt-5 ">
      <%= title_link(t("tupress.people.title")) %>
    </h1>
  </div>
</div>

<% @departments.each do |dept, people| %>
<section>
<% unless dept == "Administration" %>
	<div class="row">
		<div class="col col-12 pl-0 pr-4 mb-0 mt-3">
      <h2 class="dept-name pl-4 mx-0 mb-4">
        <%= dept %>
      </h2>
    </div>
	</div>
<% end %>
	<div class="row">
	<% people.each do |person| %>
    <div class="col col-6 mb-4 pr-4 p-0" >
      <div class="p-4 person-card">
      <article>
        <%= render "image_link", person: person %>
        <p class="name"><%= person.title %></p>
        <p><em><%= person.position %></em></p>
        <p><%= person.position_description %></p>
        <p><%= mail_to person.email, person.email %></p>
      </article>
      </div>
    </div>
	<% end %>
	</div>
</section>
<% end %>
</div>
