<% if current_user %>
  <%= link_to edit_admin_person_path(person.id) do %>
    <%= person.image.attached? ? (image_tag person.custom_image(:image, 220, 220), class: "person") : 
                                 (image_pack_tag "staff_placeholder.png", class: "person default") %>
  <% end %>
<% else %>
    <%= person.image.attached? ? (image_tag person.custom_image(:image, 220, 220), class: "person") : 
                                 (image_pack_tag "staff_placeholder.png", class: "person default") %>
<% end %>

      