<div class="container authors show">

  <div class="row">
    <div class="col mt-4">
      <h1 class="">
        <%= title_link(@author) %>
      </h1>
    </div>
  </div>

  <div class="row">
    <% @books.each do |book| %>
    <div class="col-12 col-md-6 col-lg-3 mt-4 text-center">
      <%= link_to book_path(book) do %>
      <% if book.cover_image.attached? %>
        <%= image_tag book.index_image("cover_image"), class: "cover-image" %>
      <% else %>
        <%= image_pack_tag "default-book-cover-show.png", class: "default" %>
      <% end %>
        <p class="pt-2 mb-0"><%= book.title.html_safe %></p>
      <% end %>
    </div>
    <% end %>
  </div>

  <% if @author.qa.attached? %>
  <div class="row mt-5 border-top border-bottom pt-4 pb-2">
    <div class="col-12">
      <ul class="list-unstyled">
        <li><h2 class="h4"><%= link_to "Questions & Answers with #{@author.title}", @author.qa.attachment %></h2></li> 
      </ul>
    </div>
  </div>
  <% end %>

</div>
