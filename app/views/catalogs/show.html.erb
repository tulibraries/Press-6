<div class="container catalog-show">

<div class="row">
  <div class="col-12 mt-3 px-0">
    <h1 class="mt-4">
      <%= title_link(@catalog.title, @catalog.id) %>
    </h1>
  </div>
  <div class="col-12 social-sharing text-md-right">
			<% if @catalog.pdf.attached? %>
				<%= link_to "Download PDF version", @catalog.pdf.attachment, class: "text-right text-lg-left" %><br />
			<% end %>

      <% @catalog.brochures.each do |brochure| %>
        <%= link_to brochure.title, brochure.pdf.attachment, class: "text-right text-lg-left" %>
      <% end if @catalog.brochures.any? %>
	</div>
</div>

    <%= render "/books/books" %>

</div>