<div class="container">
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators" style="bottom: -49px">
    <% @highlights.each_with_index do |highlight, index| %>
      <li data-target="#carouselIndicators" data-slide-to="<%= index %>"<%= " class=\"active\"" if index == 1 %>></li>
    <% end %>
  </ol>
  <div class="carousel-inner text-center" role="listbox">
    <% @highlights.each_with_index do |highlight, index| %>
      <div class="text-center carousel-item <%= "active" if index == 1 %>">
        <%= link_to image_tag(highlight.image, {class: "highlight", 
                                                alt: highlight.alt_text}), highlight.link %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
