  <div id="" class="col-12 col-sm-5 col-lg-4 text-right d-none d-lg-block d-print-none">



<div>
	<%= link_to image_pack_tag("cart.png", :alt=>"shopping cart"), 
	"https://cdcshoppingcart.uchicago.edu/Cart2/Cart.aspx?PRESS=temple", :class=>"nav-link" %>
</div>

<div class="text-right">
	<%= form_tag(root_path+"search", method: "get", :class=>"", :id=>"search-block") do %>
		<%= label_tag(:q, "Search by title, author, ISBN...", :class=>"element-invisible") %>

		<%= text_field_tag(:q, nil, class: "form-control w-75 d-inline-block mt-2 mr-0", 
							placeholder: "Search by title, author, ISBN...",
							results: "0"
							) %>
		<span class="search-glass">
		<%= image_submit_tag(search_glass, style: "height:28px;") %>
		</span>
	<% end %>
</div>



</div>
