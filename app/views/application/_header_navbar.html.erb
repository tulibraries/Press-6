		          <%= link_to "Series Listing", root_path+"series", :class=>"dropdown-item" %>
		          <%= link_to "Promotions", promotions_path, :class=>"dropdown-item" %>
		          <%= link_to "Study Guides", root_path+"studyguides", :class=>"dropdown-item" %>
		          <%= link_to "Books for Course Adoption", root_path+"course-adoptions", :class=>"dropdown-item" %>
		          <span style="margin-left: 1.5rem;color:white;border-bottom:solid #aaa 0px;padding-bottom:2px">Open Access Books</span>
		          <%= link_to ("&bull; Labor Studies & Work").html_safe, root_path+"open-access/labor-studies", :class=>"dropdown-item", :style=>"padding-left:2rem;" %>
		          <%= link_to ("&bull; North Broad Press").html_safe, root_path+"open-access/north-broad-press", :class=>"dropdown-item", :style=>"padding-left:2rem;" %>
		        </div>
		      </li>
		      <li class="nav-item dropdown">
		        <%= link_to "Journals",
								        "#",
								        :class=>"nav-link dropdown-toggle",
								        :id=>"navbarDropdownMenuLink",
								        :'data-toggle'=>"dropdown",
								        :'aria-haspopup'=>"true",
								        :'aria-expanded'=>"false"
								        %>
		        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
		        <% get_journals.each do |j| %>
		          <%= link_to j.title, j.url, :class=>"dropdown-item" %>
		         <% end %>
		        </div>
		      </li>
		      <li class="nav-item">
		        <%= link_to "Contact Us", root_path+"contact", :class=>"nav-link" %>
		      </li>
		      <li class="nav-item dropdown">
		        <%= link_to "Orders",
								        "#",
								        :class=>"nav-link dropdown-toggle",
								        :id=>"navbarDropdownMenuLink",
								        :'data-toggle'=>"dropdown",
								        :'aria-haspopup'=>"true",
								        :'aria-expanded'=>"false"
								        %>
		        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
		          <%= link_to "Ordering Information", root_path+"order", :class=>"dropdown-item" %>
		          <%= link_to "Payment Terms", root_path+"payment", :class=>"dropdown-item" %>
		          <%= link_to "Exam & Desk Copy Requests", root_path+"copy-request", :class=>"dropdown-item" %>
		          <%= link_to "Sales Representatives", root_path+"sales-reps", :class=>"dropdown-item" %>
		        </div>
		      </li>
		      <li class="nav-item dropdown">
		        <%= link_to "Media",
								        "#",
								        :class=>"nav-link dropdown-toggle",
								        :id=>"navbarDropdownMenuLink",
								        :'data-toggle'=>"dropdown",
								        :'aria-haspopup'=>"true",
								        :'aria-expanded'=>"false"
								        %>
		        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
		          <%= link_to "Conferences", root_path+"conferences", :class=>"dropdown-item" %>
		          <%= link_to "Event Calendar", root_path+"calendar", :class=>"dropdown-item" %>
