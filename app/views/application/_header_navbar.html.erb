<div id="header-navbar" class="container navbar navbar-static-top d-print-block" role="navigation">
  <div class="col-8 col-sm-7 col-lg-4 logo-container text-left ">
    <%= link_to root_path, class: "header-name", id: "header-logo" do %>
      <%= image_pack_tag('temple-logo-t-box.svg', class: "header-logo", alt: "") %> 
      <span><%= t("tupress.default.application.header_navbar.logo_tag") %></span>
    <% end %>
  </div>

  <div id="header-search" class="col-12 col-sm-5 col-lg-5 d-none d-lg-block text-right d-print-none">
    <%= render "header-search" %>
  </div>


  <div class="col-3 d-md-block d-lg-none text-right d-print-none">
    <button id="mobile-search-button" class="navbar-toggler icon-toggler" type="button" data-toggle="collapse" data-target="#mobile-search" aria-controls="mobile-search" aria-expanded="false" aria-label="Toggle search form">
    <span class="navbar-toggler-icon" id="search-toggler-icon">
      <div class="bar1"></div>
      <div class="bar2"></div>
      <div class="bar3"></div>
    </span>
  </button>
  </div>
</div>

<div id="wrapper">

  <div id="header" class="row">
    <div class="col">
      <% unless @alert.blank? %>
      <div class="container">
        <%= image_pack_tag "information.png", class: "decorative", alt: "" , style: "display:inline-block;height: 42px;float:left;margin-right:10px" %>
        <div>
        <% @alert.each do |alert| %>
          <% unless alert.link.blank? %>
            <%= alert.scroll_text %> <%= link_to t("tupress.default.application.header_navbar.scroll_text"), alert.link %>
          <% else %>
            <%= alert.scroll_text %>
          <% end %>
        <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div> <!-- #header -->

  <div class="row d-none d-sm-none d-md-none d-lg-block" id="main-menu">
    <div class="container nav-container">
    <nav class="navbar navbar-expand-md navbar-light" id="main-nav">
		  <%= button_tag("",
						:class=>"navbar-toggler navbar-toggler-right",
						:type=>"button",
						:'data-toggle'=>"collapse",
						:'data-target'=>"#navbarSupportedContent",
						:'aria-controls'=>"navbarSupportedContent",
						:'aria-expanded'=>"false",
						:'aria-label'=>"Toggle navigation") do
						%>
		    <span class="navbar-toggler-icon"></span>
		  <% end %>
		  <div class="collapse navbar-collapse" id="navbarSupportedContent" role="navigation">
		    <ul class="navbar-nav nav-fill">
		      <li class="nav-item">
		        <%= link_to(root_path, :class=>"nav-link") do %>
		        	Home <span class="sr-only">(current)</span>
		        <% end %>
		      </li>
		      <li class="nav-item dropdown">
		        <%= link_to "Our Books",
								        "#",
								        :class=>"nav-link dropdown-toggle",
								        :id=>"navbarDropdownMenuLink",
								        :'data-toggle'=>"dropdown",
								        :'aria-haspopup'=>"true",
								        :'aria-expanded'=>"false"
								        %>
		        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
		          <%= link_to "Award Winning Books", root_path+"awards", :class=>"dropdown-item" %>
