<%
  field.resource.subjects = [] if field.resource.subjects.nil?
  subject_list = JSON.parse(field.resource.subjects)
%>
<div class="field-unit__label">
  <%= f.label field.attribute, for: "#{f.object_name}_#{field.attribute}" %>
</div>
<div class="field-unit__field">
  <%= select_tag "#{f.object_name}[#{field.attribute}]",
                  options_for_select(subject_list, {selected: field.data.presence}),
                  include_blank: "(none)"
                %>
</div>
