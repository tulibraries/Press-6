<%= f.input :name, required: true %>
<%= f.input :email, required: true %>
<%= f.input :university, required: :false %>
<%= f.input :department, required: :false %>
<%= f.input :address_line_1, required: :false %>
<%= f.input :address_line_2, required: :false %>
<%= f.input :state, 
				label: t("State/Province/Region"), 
				required: :false %>
<%= f.input :zip, 
				label: t("Zip/Postal Code"), 
				required: :false %>
<%= f.input :country, as: :string,
				label: t("Country (if not US)"), 
				required: :false %>
<%= f.input :address_type, as: :radio_buttons,
				collection: ["Business", "Residential"],
				required: :false %>
<%= f.input :instructor, required: :false %>
<%= f.input :course_title, required: :false %>
<%= f.input :projected_enrollment, required: :false %>
<%= f.input :semester_taught, required: :false %>
