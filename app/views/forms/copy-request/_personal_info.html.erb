<%= f.input :name, required: true %>
<%= f.input :email, required: true %>
<%= f.input :university, required: false %>
<%= f.input :department, required: false %>
<%= f.input :address_line_1, required: true %>
<%= f.input :address_line_2, required: false %>
<%= f.input :state,
        label: t("tupress.forms.shared_fields.state"), 
        required: true %>
<%= f.input :zip, 
        label: t("tupress.forms.shared_fields.zip"), 
        required: true %>
<%= f.input :country, as: :string,
        label: t("tupress.forms.shared_fields.country"), 
        required: false %>
<%= f.input :address_type, as: :radio_buttons,
        collection: t("tupress.forms.copy-request.address_type"),
        item_wrapper_class: "form-check inline",
        required: true %>
<%= f.input :instructor, required: true %>
<%= f.input :course_title, required: true %>
<%= f.input :projected_enrollment, required: true %>
<%= f.input :semester_taught, required: true %>
