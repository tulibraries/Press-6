<%= f.input :name, required: true, input_html: {value: ( params[:form].present? ) ? params[:form][:name] : "" }%>
<%= f.input :email, required: true, input_html: {value: ( params[:form].present? ) ? params[:form][:name] : "" }%>
<%= f.input :website, required: false, input_html: {value: ( params[:form].present? ) ? params[:form][:name] : "" }%>
<%= f.input :address_line_1, required: true, input_html: {value: ( params[:form].present? ) ? params[:form][:name] : "" }%>
<%= f.input :address_line_2, required: false, input_html: {value: ( params[:form].present? ) ? params[:form][:name] : "" }%>
<%= f.input :state, 
        label: t("tupress.forms.shared_fields.state"), 
        required: true, input_html: {value: ( params[:form].present? ) ? params[:form][:name] : "" }%>
<%= f.input :zip, 
        label: t("tupress.forms.shared_fields.zip"), 
        required: true, input_html: {value: ( params[:form].present? ) ? params[:form][:name] : "" }%>
<%= f.input :country, as: :string,
        label: t("tupress.forms.shared_fields.country"), 
        required: false, input_html: {value: ( params[:form].present? ) ? params[:form][:name] : "" }%>
