<%= f.input :media_type, as: :radio_buttons, 
        collection: t("tupress.forms.review-copy.media_type"),
        label: t("tupress.forms.review-copy.media_type_label"),
        item_wrapper_class: "form-check inline mt-2 mb-3",
        required: true %>
        
<%= f.input :book_title, required: true %>

<%= f.input :comments, as: :text, 
        input_html: { cols: 60, rows: 5 },
        required: false %>

<%= f.input :add_to_mailing_list, as: :boolean, 
        label: t("tupress.forms.attributes.add_to_mailing_list"),
        required: false %>
