<% binding.pry %>

<%= f.input :name, required: true, input_html: {value: params[:form][:name]} %>
<%= f.input :email, required: true, input_html: {value: params[:form][:email]} %>
<%= f.input :department, required: false, input_html: {value: params[:form][:department]} %>
<%= f.input :address_line_1, required: true, input_html: {value: params[:form][:address_line_1]} %>
<%= f.input :address_line_2, required: false, input_html: {value: params[:form][:address_line_2]} %>
<%= f.input :state, 
        label: t("tupress.forms.shared_fields.state"), 
        required: true, input_html: {value: params[:form][:state]} %>
<%= f.input :zip, 
        label: t("tupress.forms.shared_fields.zip"), 
        required: true, input_html: {value: params[:form][:zip]} %>
<%= f.input :country, as: :string,
        label: t("tupress.forms.shared_fields.country"), 
        required: false, input_html: {value: params[:form][:country]} %>
