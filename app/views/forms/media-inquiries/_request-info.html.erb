<%= f.input :e_catalog, as: :boolean, 
                        label: t("tupress.forms.media-inquiries.e_catalog"),
                        required: false %>
<%= f.input :print_catalog, as: :boolean, 
                        label: t("tupress.forms.media-inquiries.print_catalog"),
                        required: false %>
<%= f.input :add_to_mailing_list, as: :boolean, 
                        label: t("tupress.forms.media-inquiries.add_to_mailing_list"),
                        required: false %>

<fieldset class="bordered">
<%= f.input :remove_from_mailing_list, as: :boolean, 
                        label: t("tupress.forms.media-inquiries.remove_from_mailing_list"),
                        required: false %>
<%= f.input :removal_description, as: :text, 
                        label: false,
                        placeholder: t("tupress.forms.media-inquiries.removal_description_placeholder"),
                        required: false %>
</fieldset>

<fieldset class="bordered">
<%= f.input :new_and_special_news, as: :boolean, 
                        label: t("tupress.forms.media-inquiries.new_and_special"),
                        required: false %>
<%= f.input :subjects, as: :select, 
                        include_blank: true, 
                        input_html: { multiple: true, size: 10 }, 
                        label: t("tupress.forms.media-inquiries.preferred_subjects"),
                        collection:  t("tupress.forms.media-inquiries.subjects"), 
                        hint: t("tupress.forms.media-inquiries.preferred_subjects_hint"), 
                        required: false %>
</fieldset>

<%= f.input :comments, as: :text, input_html: { cols: 60, rows: 5 }, required: false %>

<%= t("tupress.forms.media-inquiries.suffix_html") %>