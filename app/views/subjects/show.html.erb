<div class="container subjects show">

  <div class="row">
    <div class="col col-12 mt-3">
      <h1 class="mt-3">
        <%= title_link(@subject) %>
      </h1>
    </div>

    <div class="col-12 social-sharing text-md-right">
      <%= sort_link(params[:sort]) %>
    </div>
  </div>

  <% if @subject.brochures.present? %>
  <div class="row">
    <div class="col-2 mt-5">
        <% @subject.brochures.each do |brochure| %>
          <%= link_to brochure.title, brochure.pdf.attachment, style: "text-decoration: underline;", class: "d-block mb-4 text-right text-lg-left" %>
          <%= display_image(brochure) %>
        <% end %>
    </div>
    <div class="col-10">
    <% end %>

      <%= render "books/books" %>

    <% if @subject.brochures.present? %>
    </div>
  </div>
  <% end %>