<div class="container subjects show">

  <div class="row">
    <div class="col col-12 mt-3">
      <h1 class="mt-3">
        <%= title_link(@subject) %>
      </h1>
    </div>

  </div>
  <% if @brochures && @page %>
  <div class="row">
    <h2 class="gold mt-4 px-0 mx-0">Brochures</h2>
  </div>

  <div class="row bg-white mt-3 px-5 py-3">
    <% @subject.brochures.each do |brochure| %>
    <div class="col px-3 text-center brochure">
    <%= link_to brochure.pdf.attachment, class: "d-block" do %>
          <%= display_image(brochure) %>
          <p class="mb-0"><%= brochure.title %></p>
    <% end %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <h2 class="gold mt-4 px-0 mx-0">Titles</h2>
  </div>

  <% end %>

  <div class="col-12 social-sharing text-md-end">
    <%= sort_link(@subject, params[:sort]) %>
  </div>

  <%= render "books/books" %>

</div>