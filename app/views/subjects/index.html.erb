<div class="container subjects-index">

  <div class="row">
    <div class="col mt-3 px-0">
      <h1 class="mt-3">
        <%= title_link(t("tupress.subjects.index_title")) %>
      </h1>
    </div>
  </div>

  <div class="row pr-4 py-3">
    <div class="col subjects pl-0">
      <% @subjects.each do |subject| %>
        <p class="p-2 subject">
          <%= link_to subject.title, subject_path(subject.code) %>
        </p>
      <% end %>
    </div>
  </div>

</div>