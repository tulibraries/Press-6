<div class="container subjects-index">

  <div class="row">
    <div class="col mt-4">
      <h1>Subjects</h1>
    </div>
  </div>

  <div class="row p-4">
    <div class="col subjects pl-0">
      <% @subjects.each do |subject| %>
        <p class="p-2 subject">
          <%= link_to subject.title, subject_path(subject.code) %>
        </p>
      <% end %>
    </div>
  </div>

</div>