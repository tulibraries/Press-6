<div class="col-12 col-lg-6">
  <div class="row py-3 border-bottom">
    <div class="col-12 col-md-3 col-lg-4 py-3 text-center text-md-start">
      <%= link_to image_tag(oabook.thumb_image("image")), labor_studies_book_path(oabook), alt: cover_alt_text(book) if oabook.image.attached? %>
      <%= link_to image_tag("default-book-cover-show.png"), labor_studies_book_path(oabook), alt: cover_alt_text(book) unless oabook.image.attached?  %>
    </div>

    <div class="col-12 col-md-9 col-lg-8 pt-3">
        <%= link_to oabook.title.html_safe, labor_studies_book_path(oabook), style: "font-size: 1.25rem;display:block;" %>
        <%= "<em>#{oabook.subtitle}</em><br/>".html_safe if oabook.subtitle.present? %>
        <%= "#{oabook.author}<br/>".html_safe if oabook.author.present? %>
        <%= "<p class=\"mt-4\">#{oabook.supplemental}</p>".html_safe if oabook.supplemental.present? %>
    </div>
  </div>
</div>