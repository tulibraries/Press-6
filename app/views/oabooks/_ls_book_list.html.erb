<article> 
  <div class="neh-book row mb-4">
    <div class="col col-5 col-lg-4">
      <%= link_to image_tag(oabook.thumb_image("image")), labor_studies_book_path(oabook) if oabook.image.attached? %>
      <%= link_to image_pack_tag("default-book-cover-show.png"), labor_studies_book_path(oabook) unless oabook.image.attached? %>
    </div>

    <div class="col col-9 col-lg-8">
        <%= link_to oabook.title, labor_studies_book_path(oabook), style: "font-size: 1.25rem" %><br/>
        <%= "<em>#{oabook.subtitle}</em><br/>".html_safe if oabook.subtitle.present? %>
        <%= "#{oabook.author}<br/>".html_safe if oabook.author.present? %>
        <%= "<p class=\"mt-4\">#{oabook.supplemental}</p>".html_safe if oabook.supplemental.present? %>
    </div>
  </div>
</article>
